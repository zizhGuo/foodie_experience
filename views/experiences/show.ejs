<%- include("../partials/header_1") %>
<div class="container">
    
    <!-- Left Side Bar -->
    <div class="row">
        <div class="col-md-3">
            <p class="lead">Foodie Experience</p>
            <div class="list-group">
                <li class="list-group-item active">Info 1</li>
                <li class="list-group-item">Info 2</li>
                <li class="list-group-item">Info 3</li>
            </div>
        </div>

        <!-- List Info -->
        <div class="col-md-9">
            <div class="thumbnail">
                <% experience.images_host.forEach(function(image_url){ %>
                    <img class="img-responsive" src="/images/<%= image_url %>">
                <% });%>
                <div class="caption-full">
                    <h4 class="pull-right">$<%= experience.price %>/person</h4>
                    <h4><a><%=experience.title%></a></h4>
                    <p><%= experience.description %></p>
                    <p>
                        <h2>Host: <%= experience.host.id.name %></h2>
                        <img class="img-responsive" src="<%= experience.host.id.thumbnail %>">
                        <em><%= experience.host.selfintro %></em>
                    </p>
                    <a class="btn btn-xs btn-warning" href="/experiences/<%= experience._id %>/edit">Edit</a>
                    <form id="delete-form" action="/experiences/<%= experience._id %>?_method=DELETE" method="POST">
                        <button class="btn btn-xs btn-danger">Delete</button>
                    </form>
                    <!-- <form action="/experiences/"></form> -->
                </div>
            </div>

            <!-- Comments Section -->
            <div class="well">
                <div class="text-right">
                    <a class="btn btn-success" href="/experiences/<%= experience._id %>/comments/new">Add New Comment</a>
                </div>
                <% experience.comments.forEach(function(comment){ %>
                    <div class="row">
                        <div class="col-md-12">
                            <h1>
                                <h1>This is supposed to be the commment!</h1>
                                <%= comment.content %>
                            </h1>
                        </div>
                    </div>

                <% }) %> 
            </div>

    </div>



</div>
<%- include("../partials/footer_1") %>