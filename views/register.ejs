        <div class="field">
            <label>Thumbnail</label>
            <input type="text" name="thumbnail" placeholder="thumbnail" >
        </div>
        <div class="field">
            <label>Selfintro</label>
            <textarea type="text" name="selfintro" placeholder="Hey! Introduce yourself to the guests :)"></textarea>
